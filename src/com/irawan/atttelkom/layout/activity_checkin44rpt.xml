<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".checkin1">


    <android.support.v7.widget.Toolbar
        android:theme="@style/MyTheme"
        app:popupTheme="@style/MyTheme"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        app:titleTextAppearance="@style/Toolbar.TitleText"
        />






    <RelativeLayout

        android:id="@+id/layer10"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="@color/colorWhite"
            android:id="@+id/judul"
            android:padding="5dp"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            android:background="@color/colorBlack"
            android:text="Activity Report"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>



        //---------------------------------------------------------------------------------------



        <RelativeLayout
            android:layout_below="@+id/judul"
            android:id="@+id/layertop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">





            <RelativeLayout
                android:orientation="horizontal"
                android:id="@+id/layertgl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:padding="5dp"

                    android:text="Date Period :"
                    android:id="@+id/periode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView

                    android:layout_marginLeft="5dp"
                    android:padding="4dp"
                    android:textColor="@color/colorWhite"
                    android:background="@color/colorAccent"
                    android:hint="Date"
                    android:textSize="10dp"
                    android:id="@+id/tv_dateresult1"
                    android:layout_below="@+id/periode"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content" />

                <ImageButton
            android:layout_marginLeft="5dp"
                    android:id="@+id/bt_datepicker1"
                    android:src="@drawable/calender2"
                    android:textColor="@color/colorWhite"

                    android:layout_toRightOf="@id/tv_dateresult1"
                    android:layout_below="@+id/periode"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />









            <TextView
                android:id="@+id/textHasil1"
                android:padding="4dp"
                android:hint="hasil1"
                android:textSize="10dp"
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textHasil2"
                android:padding="4dp"
                android:hint="hasil1"
                android:textSize="10dp"
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            </RelativeLayout>

        </RelativeLayout>




        //-------------------------------

        <RelativeLayout
            android:layout_below="@+id/layertop"

            android:id="@+id/layer1"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:background="@drawable/bulat43"
                android:textSize="12dp"
                android:id="@+id/edit1"
                android:hint="Masukkan NIK Pegawai : "

                android:padding="5dp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"/>
            <Button
                android:layout_toRightOf="@+id/edit1"
                android:id="@+id/butNIK"
                android:background="@drawable/bulat2"
                android:padding="3dp"
                android:text="Cari NIK"
                android:layout_width="wrap_content"
                android:layout_height="30dp"/>


            <Button
                android:layout_below="@+id/butNIK"
                android:id="@+id/bt_submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Process" />

        </RelativeLayout>


    </RelativeLayout>


<RelativeLayout
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:layout_below="@+id/layer10"
    android:id="@+id/layer2"

    android:layout_width="match_parent"
    android:layout_height="wrap_content">





</RelativeLayout>


<!--bbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbButton-->


<RelativeLayout

    android:gravity="center_horizontal"
    android:id="@+id/layer00"
    android:layout_below="@+id/layer2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView

        android:id="@+id/nama1"
        android:text="Employee Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>





</RelativeLayout>


    <RelativeLayout
        android:layout_margin="10dp"
        android:id="@+id/layer34"
        android:layout_below="@+id/layer00"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <android.support.v7.widget.RecyclerView
            android:background="@color/colorGreymuda_2"
            android:id="@+id/bedulkubu"
            android:layout_width="match_parent"
            android:layout_height="300dp"

            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:scrollbars="vertical" />
    </RelativeLayout>


<RelativeLayout
    android:layout_below="@+id/layer34"

    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <Button
        android:text="Close"
        android:background="@drawable/bulat42"
        android:id="@+id/butSimpan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>



</RelativeLayout>