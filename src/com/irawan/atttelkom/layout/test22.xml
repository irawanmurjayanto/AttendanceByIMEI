<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_margin="2dp"

        android:id="@+id/cv"
        android:padding="2dp"
        android:background="@color/colorPOSBiru"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:padding="5dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:visibility="invisible"
                android:id="@+id/textIDNO"
                android:layout_width="1dp"
                android:layout_height="1dp"/>



            <TextView
                android:layout_alignParentLeft="true"
                android:text="test"
                android:textStyle="bold"
                android:id="@+id/textJudul"
                android:textColor="@color/colorBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:padding="2dp"
                android:textSize="7dp"

                android:background="@color/colorBlack"
                android:layout_below="@+id/textJudul"
                android:layout_alignParentLeft="true"
                android:text="Defintion of Done"
                android:textStyle="bold"
                android:id="@+id/textdodJudul"
                android:textColor="@color/colorWhite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <TextView
                android:layout_below="@+id/textdodJudul"
                android:layout_alignParentLeft="true"
                android:text="test"
                android:textStyle="bold"
                android:id="@+id/textdod"
                android:textColor="@color/colorBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>





        </RelativeLayout>





    </android.support.v7.widget.CardView>

</LinearLayout>